# rearranging arr in increase & decrease order
# input=[1,2,3,4,5,6,7] output=[1,7,2,6,3,5,4]
def rearrange_arr(arr):
    arr.sort()
    n=len(arr)
    result=[]
    left=0
    right=n-1
    while left<=right:
        if left==right:
            result.append(arr[left])
        else:
            result.append(arr[left])
            result.append(arr[right])
        left+=1
        right-=1
    return result
print(rearrange_arr([1,2,3,4,5,6,7]))
    
    