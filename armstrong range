#method 4
'''
def armstrong_range(start,end):
    armstrong_lst=[]
    for num in range(start,end+1):
        n_str=str(num)
        digits=len(n_str)
        sum_of_pow=sum(int(i)**digits for i in n_str)
        if sum_of_pow==num:
            armstrong_lst.append(num)
    return armstrong_lst
print(armstrong_range(100,1000))
'''
# method 5
def armstrong(n):
    temp=n
    sum=0 
    digits=len(str(n))
    while n>0:
        digit=n%10
        sum+=digit**digits
        n//=10
    return sum==temp
def range_check(start,end):
    armstrong_lst=[i for i in range(start,end+1) if armstrong(i)]
    return armstrong_lst

print(range_check(100,1000))

