'''
def armstrong_range(start,end):
    armstrong_lst=[]
    for num in range(start,end+1):
        temp=num
        sum=0
        digits=len(str(num))
        while num>0:
            digit=num%10
            sum+=digit**digits
            num//=10
        if sum==temp:
            armstrong_lst.append(temp)
    return armstrong_lst
print(armstrong_range(100,400))
