#method 2
'''
class ArmstrongRange:
    def __init__(self,start,end):
        self.start=start
        self.end=end
    def check(self):
        armstrong_lst=[]
        for num in range(self.start,self.end):
            temp=num
            sum=0 
            digits=len(str(num))
            while num>0:
                digit=num%10
                sum+=digit**digits
                num//=10
            if sum==temp:
                armstrong_lst.append(temp)
        return armstrong_lst
    def display(self):
        result=self.check()
        print(result)
a=ArmstrongRange(100,500)
a.display()
ArmstrongRange(150,300).display()
'''
#method 3
'''
class ArmstrongRange:
    @classmethod
    def check(cls,start,end):
        armstrong_lst=[]
        for num in range(start,end):
            temp=num
            sum=0 
            digits=len(str(num))
            while num>0:
                digit=num%10
                sum+=digit**digits
                num//=10
            if sum==temp:
                armstrong_lst.append(temp)
        return armstrong_lst
    @classmethod
    def display(cls,start,end):
        result=cls.check(start,end)
        print(result)
ArmstrongRange.display(100,500)
a=ArmstrongRange
a.display(150,300)
