def perfect_range(start,end):
    perfect=[]
    for i in range(start,end+1):
        sum=0 
        for j in range(1,i):
            if i%j==0:
                sum+=j
        if sum==i:
            perfect.append(i)
    return perfect
print(perfect_range(1,1000))    
